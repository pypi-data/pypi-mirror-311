<odoo>
    <record model="ir.ui.view" id="purchase_order_form">
        <field name="name">purchase.order.form (in purchase_warn_message)</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <header position="after">
                <div
                    class="alert alert-warning"
                    role="alert"
                    invisible="purchase_product_warn_msg==False"
                    style="margin-bottom:0px; border-color: #F7E5D8; background-color: #F7E5D8; color:black;"
                >
                    <p>
                        <i class="fa fa-info-circle" />
                        <span>&amp;nbsp;Products Warning</span>
                        <field name="purchase_product_warn_msg" class="oe_inline" />
                    </p>
                </div>
            </header>
        </field>
    </record>
</odoo>
