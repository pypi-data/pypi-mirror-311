Service:
  RegionId: {{ RegionId }}
  DeployType: ros
  OperationMetadata:
    StatusOperationConfigs:
      - TemplateName: {% if ServiceType == 'managed' %}'Template'{% else %}'单机版'{% endif %}
        SupportOperations:
          - Start
          - Stop
          - Restart
    SupportBackup: true
  DeployMetadata:
    SupplierDeployMetadata:
      {%- if ServiceType == 'managed' %}
      RoleName: {{ RoleName }}
      UserType: Aliyun
      SupplierTemplateConfigs:
        - Name: Template
          Url: 'ros_templates/template.yaml'
          PredefinedParameters: []
          HiddenParameterKeys:
            - VpcId
            - VSwitchId
            - ZoneId
          ParameterMappings:
            - ParameterKey: RegionId
              ParameterMappingKeys:
                - VpcId
                - ZoneId
                - VSwitchId
              ParameterValueMapping:
                {{ RegionId }}:
                  Parameters:
                    VpcId: {{ VpcId }}
                    ZoneId: {{ ZoneId }}
                    VSwitchId: {{ VSwitchId }}
      {%- endif %}
      FileArtifactRelation:
        '{{ '{{ computenest::file::' ~ RepoName ~ ' }}' }}':
          ArtifactId: ${Artifact.Artifact_1.ArtifactId}
          ArtifactVersion: ${Artifact.Artifact_1.ArtifactVersion}
    {%- if ServiceType == 'private' %}
    TemplateConfigs:
      - Name: 单机版
        Url: 'ros_templates/template.yaml'
        AllowedRegions:{% if AllowedRegions -%}
          {%- for region in AllowedRegions %}
          - {{ region }}{%- endfor %}
        {%- else -%}
          - []
        {%- endif %}
    {%- endif %}
  ServiceType: {{ ServiceType }}
  ServiceInfo:
    Locale: zh-CN
    ShortDescription: demo
    Image: 'resources/icons/service_logo.png'
Artifact:
  Artifact_1:
    ArtifactType: File
    ArtifactName: {{ RepoName }}
    ArtifactProperty:
      RegionId: cn-hangzhou
      Url: 'resources/artifact_resources/file/{{ PackageName }}'