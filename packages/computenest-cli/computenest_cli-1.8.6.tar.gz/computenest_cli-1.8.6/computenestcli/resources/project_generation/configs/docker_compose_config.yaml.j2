Service:
  RegionId: {{ RegionId }}
  DeployType: ros
  OperationMetadata:
    StatusOperationConfigs:
      - TemplateName: {% if ServiceType == 'managed' %}'Template'{% else %}'单机版'{% endif %}
        SupportOperations:
          - Start
          - Stop
          - Restart
    SupportBackup: true
  DeployMetadata:
    {%- if ServiceType == 'managed' or DockerComposeYamlPath %}
    SupplierDeployMetadata:
      {%- if ServiceType == 'managed' %}
      RoleName: {{ RoleName }}
      UserType: Aliyun
      SupplierTemplateConfigs:
        - Name: Template
          Url: 'ros_templates/template.yaml'
          PredefinedParameters: []
          HiddenParameterKeys:
            - VpcId
            - VSwitchId
            - ZoneId
          ParameterMappings:
            - ParameterKey: RegionId
              ParameterMappingKeys:
                - VpcId
                - ZoneId
                - VSwitchId
              ParameterValueMapping:
                {{ RegionId }}:
                  Parameters:
                    VpcId: {{ VpcId }}
                    ZoneId: {{ ZoneId }}
                    VSwitchId: {{ VSwitchId }}
      {%- endif %}
      {%- endif %}
      FileArtifactRelation:
        '{{ '{{ computenest::file::' ~ RepoName ~ '-docker-compose }}' }}':
          ArtifactId: ${Artifact.Artifact_1.ArtifactId}
          ArtifactVersion: ${Artifact.Artifact_1.ArtifactVersion}
    {%- if ServiceType == 'private' %}
    TemplateConfigs:
      - Name: 单机版
        Url: 'ros_templates/template.yaml'
        AllowedRegions:{% if AllowedRegions -%}
          {%- for region in AllowedRegions %}
          - {{ region }}{%- endfor %}
        {%- else -%}
          - []
        {%- endif %}
    {%- endif %}
  ServiceType: {{ ServiceType }}
  ServiceInfo:
    Locale: zh-CN
    ShortDescription: docker compose deploy
    Image: 'resources/icons/service_logo.png'
Artifact:
  Artifact_1:
    ArtifactType: File
    ArtifactName: {{ RepoName }}-docker-compose
    ArtifactProperty:
      RegionId: {{ RegionId }}
      Url: 'resources/artifact_resources/docker_compose.tar'
{%- for item in ArtifactParameters %}
  Artifact_{{ loop.index + 1 }}:
    ArtifactType: AcrImage
    ArtifactName: {{ item.ArtifactName }}
    ArtifactProperty:
      RepoName: ${AcrImageBuilder.AcrImage_{{ loop.index }}.RepoName}
      Tag: ${AcrImageBuilder.AcrImage_{{ loop.index }}.Tag}
      RepoType: Public
{%- endfor %}
AcrImageBuilder:
{%- for item in ArtifactParameters %}
  AcrImage_{{ loop.index }}:
    BuildType: DockerRepo
    DockerRepoUrl: {{ item.DockerImageUrl }}
    RepoName: {{ item.DockerImageName }}
    Tag: {{ item.DockerImageTag }}
{%- endfor %}