Service:
  RegionId: {{ RegionId }}
  DeployType: ros
  DeployMetadata:
    SupplierDeployMetadata:
      {%- if ServiceType == 'managed' %}
      RoleName: {{ RoleName }}
      UserType: Aliyun
      SupplierTemplateConfigs:
        - Name: Template
          Url: 'ros_templates/template.yaml'
          PredefinedParameters: []
          HiddenParameterKeys:
            - VpcId
            - VSwitchId
            - ZoneId
          ParameterMappings:
            - ParameterKey: RegionId
              ParameterMappingKeys:
                - VpcId
                - ZoneId
                - VSwitchId
              ParameterValueMapping:
                {{ RegionId }}:
                  Parameters:
                    VpcId: {{ VpcId }}
                    ZoneId: {{ ZoneId }}
                    VSwitchId: {{ VSwitchId }}
      {%- endif %}
      AcrImageArtifactRelation:
        # 相应的，ros模板中也需要采用该伪参数
        '{{ '{{ computenest::acrimage::' ~ RepoName ~ '-dockerfile }}' }}':
          ArtifactId: ${Artifact.Artifact_1.ArtifactId}
          ArtifactVersion: ${Artifact.Artifact_1.ArtifactVersion}
    {%- if ServiceType == 'private' %}
    TemplateConfigs:
      - Name: ECS单机版
        Url: 'ros_templates/template.yaml'
        # 未选择部署地域则采用 []
        AllowedRegions:{% if AllowedRegions -%}
          {%- for region in AllowedRegions %}
          - {{ region }}{%- endfor %}
        {%- else -%}
          - []
        {%- endif %}
    {%- endif %}
  ServiceType: {{ ServiceType }}
  ServiceInfo:
    Locale: zh-CN
    ShortDescription: demo
    Image: 'resources/icons/service_logo.png'
Artifact:
  Artifact_1:
    ArtifactType: AcrImage
    # 采用与image_name相同的ArtifactName
    ArtifactName: {{ RepoName | lower }}-dockerfile
    ArtifactProperty:
      RepoName: ${AcrImageBuilder.AcrImage_1.RepoName}
      Tag: ${AcrImageBuilder.AcrImage_1.Tag}
      RepoType: Private
AcrImageBuilder:
  AcrImage_1:
    # dockerfile路径
    DockerFilePath: {{ DockerFilePath }}
    # 采用与image_name相同的repoName
    RepoName: {{ RepoName | lower }}-dockerfile
    Tag: {{ ImageTag | default('latest') }}
    DockerBuildArgs: {{ DockerBuildArgs | default('{}') }}
